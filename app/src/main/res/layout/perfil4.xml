<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="30dp">
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:text="Perfil de Bobby"
        android:id="@+id/textView3"
        android:background="#ff0000"
        android:textStyle="normal|bold"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textAlignment="center" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="385dp"
            android:textAlignment="center"
            android:textSize="40dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Bobby, 4 años"
            android:id="@+id/tviTexto"
            android:layout_marginTop="15dp"
            android:textStyle="normal|bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="240dp"
            android:id="@+id/iviMascota"
            android:src="@drawable/bobby"
            android:scaleType="centerCrop" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Vine en: San Borja"
            android:id="@+id/tviDescripcion1"
            android:layout_marginTop="15dp"
            android:textStyle="normal|bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Raza: Schnauzer"
            android:id="@+id/tviDescripcion2"
            android:layout_marginTop="15dp"
            android:textStyle="normal|bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Nota personal:"
            android:id="@+id/tviDescripcion3"
            android:layout_marginTop="15dp"
            android:textStyle="normal|bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:textAlignment="textStart"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Soy un perrito en busca de alguna perrita que le guste morden los zapatos de sus dueños."
            android:id="@+id/tviDescripcion4"
            android:layout_marginTop="15dp"
            android:textStyle="normal|bold"
            android:layout_gravity="right"
            android:gravity="left" />
    </LinearLayout>

    </LinearLayout>



</LinearLayout>